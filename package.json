{
  "name": "XHPJS",
  "version": "0.0.1",
  "description": "Easily create JS controllers for XHP elements, and XHP wrappers for React elements",
  "main": "./src/js/XHPJS.js",
  "scripts": {
    "build": "npm run build:dev && npm run build:minified && npm run build:example",
    "build:dev": "browserify -r XHPJS -x react -o xhpjs-dev.js",
    "build:minified": "browserify -g uglifyify -r XHPJS -x react -o xhpjs-minified.js",
    "build:example": "browserify -r XHPJS -r react -r MyJSController -r MyJSModule -r MyReactClass -o example/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hhvm/xhp-js.git"
  },
  "author": "Fred Emmott",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/hhvm/xhp-js/issues"
  },
  "devDependencies": {
    "browserify": "~9.0.8",
    "uglifyify": "~3.0.1",
    "reactify": "~1.1.0",
    "react": "~0.13.1"
  },
  "browser": {
    "MyJSController": "./example/MyJSController.js",
    "MyJSModule": "./example/MyJSModule.js",
    "MyReactClass": "./example/MyReactClass.js"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
